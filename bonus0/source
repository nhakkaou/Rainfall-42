#include <stdio.h>
#include <stdlib.h>

char *p(char *s, char *str)
{
    char buffer[4096];

    puts(str);
    read(0, buffer, 4096);
    strchr(buffer, '\n');
    return (strncpy(s, buffer, 20));
}

char *pp(char *buffer)
{
    char b[20];
    char a[20];
    int len;

    p(a, " - ");
    p(b, " - ");
    strcpy(buffer, a);
    len = strlen(buffer);
    buffer[len] = ' ';
    buffer[len + 1] = 0;
    return (strcat(buffer, b));
}
int main(int ac, char **av)
{
    char *tmp;
    pp(tmp);
    puts(tmp);
    return (0);
}